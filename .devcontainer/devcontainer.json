{
  "name": "Hugo Blog",
  "build": {
    "dockerfile": "Dockerfile",
  },
  "remoteUser": "dev",
  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": {
      "label": "Hugo Dev Server",
      "onAutoForward": "openBrowser",
    },
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.codespaces",
        "mutantdino.resourcemonitor",
        "jasonnutter.vscode-codeowners",
        "golang.go",
        "budparr.language-hugo-vscode",
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
      },
    },
  },
}
